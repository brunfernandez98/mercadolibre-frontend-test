{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    "rootDir": "./src",
    "moduleResolution": "Node",
    "outDir": "./build",
    "esModuleInterop": true,
    "lib": ["ES6"],
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "serverInfo.json"]
}
